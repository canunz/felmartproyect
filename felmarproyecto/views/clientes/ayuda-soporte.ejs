    <script>
        // Show specific help content
        function showHelp(category) {
            // Hide all help content
            const allHelp = document.querySelectorAll('.help-content');
            allHelp.forEach(content => content.classList.remove('active'));
            
            // Hide categories grid
            document.getElementById('categoriesGrid').style.display = 'none';
            
            // Show specific help content
            const helpContent = document.getElementById(category + '-help');
            if (helpContent) {
                helpContent.classList.add('active');
                helpContent.scrollIntoView({ behavior: 'smooth' });
            }
            
            // Add back button to help content if not exists
            if (!helpContent.querySelector('.back-to-categories')) {
                const backButton = document.createElement('a');
                backButton.href = '#';
                backButton.className = 'back-button back-to-categories';
                backButton.innerHTML = '<i class="fas fa-arrow-left"></i> Volver a Categorías';
                backButton.onclick = function(e) {
                    e.preventDefault();
                    showCategories();
                };
                helpContent.insertBefore(backButton, helpContent.firstChild);
            }
        }

        // Show categories grid
        function showCategories() {
            // Hide all help content
            const allHelp = document.querySelectorAll('.help-content');
            allHelp.forEach(content => content.classList.remove('active'));
            
            // Show categories grid
            document.getElementById('categoriesGrid').style.display = 'grid';
            
            // Scroll to categories
            document.getElementById('categoriesGrid').scrollIntoView({ behavior: 'smooth' });
        }

        // Search functionality
        function searchHelp() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const categories = document.querySelectorAll('.category-card');
            
            categories.forEach(category => {
                const title = category.querySelector('.category-title').textContent.toLowerCase();
                const description = category.querySelector('.category-description').textContent.toLowerCase();
                const topics = Array.from(category.querySelectorAll('.topics-list li'))
                    .map(li => li.textContent.toLowerCase()).join(' ');
                
                const content = title + ' ' + description + ' ' + topics;
                
                if (content.includes(searchTerm)) {
                    category.style.display = 'block';
                    category.style.opacity = '1';
                } else {
                    category.style.display = searchTerm === '' ? 'block' : 'none';
                    category.style.opacity = searchTerm === '' ? '1' : '0.3';
                }
            });
        }

        // FAQ toggle functionality
        function toggleFaq(element) {
            const answer = element.nextElementSibling;
            const icon = element.querySelector('i');
            
            if (answer.classList.contains('show')) {
                answer.classList.remove('show');
                icon.style.transform = 'rotate(0deg)';
            } else {
                // Close all other FAQs
                document.querySelectorAll('.faq-answer.show').forEach(openAnswer => {
                    openAnswer.classList.remove('show');
                    openAnswer.previousElementSibling.querySelector('i').style.transform = 'rotate(0deg)';
                });
                
                // Open clicked FAQ
                answer.classList.add('show');
                icon.style.transform = 'rotate(180deg)';
            }
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Add fade-in animation to elements
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach((element, index) => {
                setTimeout(() => {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
