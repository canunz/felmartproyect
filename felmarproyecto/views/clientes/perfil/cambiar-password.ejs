                            <label for="password_nuevo" class="form-label">
                                <i class="fas fa-key"></i>
                                Nueva Contrase√±a
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password_nuevo" name="password_nuevo" 
                                       placeholder="Ingresa la nueva contrase√±a" required minlength="6">
                                <button type="button" class="password-toggle" onclick="togglePassword('password_nuevo')">
                                    <i class="fas fa-eye" id="eye_password_nuevo"></i>
                                </button>
                            </div>
