            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">Cambiar Contrase√±a</h1>
                <p class="page-subtitle">Actualiza tu contrase√±a para mantener tu cuenta segura</p>
            </div>

            <!-- Form Card -->
            <div class="form-card">
                <div class="card-header-custom">
                    <div class="security-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="card-header-title">Seguridad de la Cuenta</h3>
                </div>
                <div class="card-body-custom">
                    <!-- Alerts -->
                    <div id="alertContainer">
                        <!-- Error Alert del servidor (EJS) -->
                        <% if (typeof error !== 'undefined' && error && error.length) { %>
                        <div class="alert-custom alert-danger">
                            <i class="fas fa-exclamation-triangle alert-icon"></i>
                            <span><%= error %></span>
                        </div>
                        <% } %>
                        
                        <!-- Success Alert del servidor (EJS) -->
                        <% if (typeof success !== 'undefined' && success && success.length) { %>
                        <div class="alert-custom alert-success">
                            <i class="fas fa-check-circle alert-icon"></i>
                            <span><%= success %></span>
                        </div>
                        <% } %>

                        <!-- Dynamic alerts para validaciones JavaScript -->
                        <div class="alert-custom alert-danger" style="display: none;" id="errorAlert">
                            <i class="fas fa-exclamation-triangle alert-icon"></i>
                            <span id="errorMessage">Error al cambiar la contrase√±a</span>
                        </div>
                        
                        <div class="alert-custom alert-success" style="display: none;" id="successAlert">
                            <i class="fas fa-check-circle alert-icon"></i>
                            <span id="successMessage">Contrase√±a actualizada exitosamente</span>
                        </div>
                    </div>

                    <!-- Form -->
                    <form action="/clientes/perfil/cambiar-password" method="POST" id="passwordForm">
                        <div class="form-group">
                            <label for="password_actual" class="form-label">
                                <i class="fas fa-lock"></i>
                                Contrase√±a Actual
                            </label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password_actual" name="password_actual" 
                                       placeholder="Ingresa tu contrase√±a actual" required>
                                <button type="button" class="password-toggle" onclick="togglePassword('password_actual')">
                                    <i class="fas fa-eye" id="eye_password_actual"></i>
                                </button>
                            </div>
                        </div>

