    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('form-editar-perfil');
            const updateBtn = document.getElementById('updateBtn');
            const successMessage = document.getElementById('successMessage');

            // Función para mostrar mensaje de éxito
            function showSuccessMessage() {
                successMessage.classList.add('show');
                setTimeout(() => {
                    successMessage.classList.remove('show');
                }, 4000);
            }

            // Manejar envío del formulario - AJAX REAL
            form.addEventListener('submit', async function(event) {
                event.preventDefault();

                // Cambiar botón a estado de carga
                const originalContent = updateBtn.innerHTML;
                updateBtn.innerHTML = '<span class="spinner me-2"></span>Guardando...';
                updateBtn.disabled = true;

                // Prepara los datos del formulario
                const formData = new FormData(form);
                const data = {};
                formData.forEach((value, key) => data[key] = value);

                try {
                    const response = await fetch('/clientes/perfil/actualizar', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    const result = await response.json();

                    if (result.success) {
                        // Actualizar los campos del formulario con los datos nuevos
                        if (result.perfil && result.perfil.usuario) {
                            document.getElementById('nombre').value = result.perfil.usuario.nombre || '';
                            document.getElementById('email').value = result.perfil.usuario.email || '';
                            document.getElementById('telefono').value = result.perfil.usuario.telefono || '';
                            // Actualizar nombre en navegación
                            const userName = document.getElementById('userName');
                            const userNameDropdown = document.getElementById('userNameDropdown');
                            if (result.perfil.usuario.nombre) {
                                const firstName = result.perfil.usuario.nombre.split(' ')[0];
                                userName.textContent = firstName;
                                userNameDropdown.textContent = firstName;
                            }
                        }
                        if (result.perfil && result.perfil.cliente) {
                            document.getElementById('nombre_empresa').value = result.perfil.cliente.nombre_empresa || '';
                            document.getElementById('contacto_principal').value = result.perfil.cliente.contacto_principal || '';
                            document.getElementById('direccion').value = result.perfil.cliente.direccion || '';
                            document.getElementById('region_id').value = result.perfil.cliente.region_id || '';
                            document.getElementById('comuna_id').value = result.perfil.cliente.comuna_id || '';
                        }
                        showSuccessMessage();
                    } else {
                        alert(result.error || 'Error al actualizar el perfil.');
                    }
                } catch (err) {
                    alert('Error de conexión con el servidor.');
                } finally {
                    updateBtn.innerHTML = originalContent;
                    updateBtn.disabled = false;
                }
            });

            // Cargar comunas cuando se cambia región
            const regionSelect = document.getElementById('region_id');
            const comunaSelect = document.getElementById('comuna_id');
            regionSelect.addEventListener('change', function() {
                const regionId = this.value;
                comunaSelect.innerHTML = '<option value=\"\">Seleccione una comuna</option>';
                if (!regionId) return;
                const comunasPorRegion = {
                    '1': [
                        { id: '1', nombre: 'Puerto Montt' },
                        { id: '2', nombre: 'Puerto Varas' },
                        { id: '3', nombre: 'Ancud' },
                        { id: '4', nombre: 'Castro' }
                    ],
                    '2': [
                        { id: '5', nombre: 'Concepción' },
                        { id: '6', nombre: 'Talcahuano' },
                        { id: '7', nombre: 'Los Angeles' },
                        { id: '8', nombre: 'Chillán' }
                    ],
                    '3': [
                        { id: '9', nombre: 'Temuco' },
                        { id: '10', nombre: 'Villarrica' },
                        { id: '11', nombre: 'Pucón' }
                    ],
                    '4': [
                        { id: '12', nombre: 'Valdivia' },
                        { id: '13', nombre: 'La Unión' },
                        { id: '14', nombre: 'Río Bueno' }
                    ]
                };
                const comunas = comunasPorRegion[regionId] || [];
                comunas.forEach(comuna => {
                    const option = document.createElement('option');
                    option.value = comuna.id;
                    option.textContent = comuna.nombre;
                    comunaSelect.appendChild(option);
                });
            });

            // Formatear RUT mientras se escribe
            const rutInput = document.getElementById('rut');
            rutInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/[^0-9kK]/g, '');
                if (value.length <= 1) {
                    e.target.value = value.toUpperCase();
                    return;
                }
                let cuerpo = value.slice(0, -1);
                let dv = value.slice(-1).toUpperCase();
                if (cuerpo.length > 3) {
                    cuerpo = cuerpo.replace(/\B(?=(\d{3})+(?!\d))/g, '.');
                }
                e.target.value = cuerpo + '-' + dv;
            });

            // Formatear teléfono
            const telefonoInput = document.getElementById('telefono');
            telefonoInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/[^0-9+]/g, '');
                if (value.startsWith('56') && value.length > 2) {
                    value = '+56 ' + value.slice(2);
                }
                e.target.value = value;
            });
        });
    </script>
