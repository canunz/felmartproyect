    <script>
        // Funci√≥n para cargar los certificados desde el backend
        async function cargarCertificados() {
            try {
                const response = await fetch('/api/certificados/cliente', {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    credentials: 'same-origin'
                });

                if (!response.ok) {
                    if (response.status === 403) {
                        window.location.href = '/login';
                        return;
                    }
                    throw new Error(`Error al cargar los certificados: ${response.status}`);
                }

                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    throw new Error('Respuesta del servidor no v√°lida');
                }

                const certificados = await response.json();
                renderCertificados(certificados);
            } catch (error) {
                console.error('Error al cargar certificados:', error);
                document.getElementById('certificatesContainer').innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-exclamation-circle"></i>
                        <h3>Error al cargar certificados</h3>
                        <p>No se pudieron cargar los certificados.<br>
                        Por favor, intenta recargar la p√°gina.</p>
                        <button onclick="window.location.reload()" class="btn btn-primary mt-3">
                            <i class="fas fa-sync-alt"></i> Recargar p√°gina
                        </button>
                    </div>
                `;
            }
        }

        // Obtener estado label y clase
        function getEstadoInfo(estado) {
            const estados = {
                'emitido': { label: 'Emitido', class: 'status-emitido', icon: 'fas fa-check-circle' },
                'pendiente': { label: 'Pendiente', class: 'status-pendiente', icon: 'fas fa-clock' },
                'vencido': { label: 'Vencido', class: 'status-vencido', icon: 'fas fa-times-circle' }
            };
            return estados[estado] || { label: estado, class: 'status-pendiente', icon: 'fas fa-clock' };
        }

        // Renderizar certificados
        function renderCertificados(certificados) {
            const container = document.getElementById('certificatesContainer');
            
            if (!certificados || certificados.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-certificate"></i>
                        <h3>No hay certificados disponibles</h3>
                        <p>A√∫n no tienes certificados asignados.<br>
                        Contacta con nuestro equipo para solicitar un certificado.</p>
                    </div>
                `;
                return;
            }
            
            let html = '';
            certificados.forEach(cert => {
                html += `
                    <div class="certificate-item">
                        <div class="certificate-info">
                            <div class="certificate-title">${cert.titulo}</div>
                            <div class="certificate-date">
                                <i class="fas fa-calendar"></i>
                                ${cert.fecha}
                            </div>
                            <div class="certificate-description">
                                ${cert.descripcion}
                            </div>
                        </div>
                        
                        <div class="certificate-actions">
                            ${cert.rutaPdf ? 
                                `<button onclick="descargarPDF(${cert.id})" class="btn-download">
                                    <i class="fas fa-download"></i>
                                    Descargar PDF
                                </button>` :
                                `<button class="btn-disabled" disabled>
                                    <i class="fas fa-clock"></i>
                                    PDF no disponible
                                </button>`
                            }
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
            addRowClickListeners(certificados);
        }

        // Ver detalle del certificado
        function verDetalle(certificado) {
            if (!certificado) return;
            
            const content = `
                <div class="certificate-preview">
                    <h2>CERTIFICADO</h2>
                    <div style="margin: 1rem 0; color: #6c757d;">
                        <strong>FELMART LTDA.</strong><br>
                        Gesti√≥n Integral de Residuos
                    </div>
                    <h4 style="color: var(--primary-color);">${certificado.titulo}</h4>
                </div>
                
                <div class="certificate-details">
                    <div class="detail-row">
                        <span class="detail-label">ID Certificado:</span>
                        <span class="detail-value">#${certificado.id}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">Fecha de Emisi√≥n:</span>
                        <span class="detail-value">${certificado.fecha}</span>
                    </div>
                </div>
                
                <div style="margin-top: 1.5rem;">
                    <h6 style="color: var(--primary-color); margin-bottom: 0.75rem;">Observaciones</h6>
                    <p style="color: #6c757d; line-height: 1.6;">${certificado.descripcion}</p>
                </div>
            `;
            
            document.getElementById('detalleCertificadoContent').innerHTML = content;
            document.getElementById('btnDescargarModal').onclick = () => descargarPDF(certificado.id);
            document.getElementById('btnDescargarModal').style.display = certificado.rutaPdf ? 'block' : 'none';
            
            const modal = new bootstrap.Modal(document.getElementById('modalDetalleCertificado'));
            modal.show();
        }

        // Agregar click en las filas para ver detalle
        function addRowClickListeners(certificados) {
            document.querySelectorAll('.certificate-item').forEach((item, index) => {
                item.style.cursor = 'pointer';
                item.addEventListener('click', (e) => {
                    // No abrir modal si se hizo click en un bot√≥n
                    if (!e.target.closest('a, button')) {
                        verDetalle(certificados[index]);
                    }
                });
            });
        }

        // Funci√≥n para descargar PDF
        async function descargarPDF(id) {
            try {
                const response = await fetch(`/clientes/certificados/descargar/${id}`);

                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Error al descargar el archivo');
                }

                // Si es un PDF, descargarlo
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `certificado-${id}.pdf`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
            } catch (error) {
                console.error('Error:', error);
                alert(error.message || 'Error al descargar el certificado');
            }
        }

        // Inicializar p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            cargarCertificados();
        });
    </script>
