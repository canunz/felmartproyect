let residuosDisponiblesNuevo = [];
// Elimina cualquier valor fijo de UF (como VALOR_UF = 37000)


async function cargarResiduosDisponiblesNuevo() {
    try {
        const res = await fetch('/api/precios-residuos');
        const data = await res.json();
        if (data.success && Array.isArray(data.residuos)) {
            residuosDisponiblesNuevo = data.residuos;
            const select = document.getElementById('nuevo_residuoId');
            select.innerHTML = '<option value="">-- Seleccione un tipo --</option>';
            residuosDisponiblesNuevo.forEach(residuo => {
                const option = document.createElement('option');
                option.value = residuo.id;
                option.dataset.unidad = residuo.unidad;
                option.dataset.precio = residuo.precio;
                option.dataset.moneda = residuo.moneda;
                option.dataset.descripcion = residuo.descripcion;
                option.textContent = residuo.descripcion;
                select.appendChild(option);
            });
        }
    } catch (e) {
        mostrarToast('Error al cargar residuos disponibles', 'error');
    }
}

function formatearPrecioNuevo(valor, moneda) {
    if (typeof valor !== 'number' || isNaN(valor)) return '-';
    if (moneda === 'UF') {
        return `${valor.toLocaleString('es-CL', { minimumFractionDigits: 2, maximumFractionDigits: 4 })} UF`;
    } else {
        return new Intl.NumberFormat('es-CL', {
            style: 'currency',
            currency: 'CLP',
            minimumFractionDigits: 0
        }).format(valor);
    }
}

function formatearMonedaNuevo(valor) {
    if (typeof valor !== 'number' || isNaN(valor)) return '-';
    return new Intl.NumberFormat('es-CL', {
        style: 'currency',
        currency: 'CLP',
        minimumFractionDigits: 0
    }).format(valor);
}

function renderTablaResiduosNuevo() {
    const cuerpo = document.getElementById('cuerpoResiduosNuevo');
    cuerpo.innerHTML = '';
    if (residuosNuevos.length === 0) {
        cuerpo.innerHTML = `<tr><td colspan="7" class="text-center text-muted">No hay residuos agregados</td></tr>`;
        return;
    }
    residuosNuevos.forEach((r, i) => {
        // Para residuos en UF, mostrar el precio unitario en UF pero el subtotal en CLP
        let precioMostrar = r.moneda === 'UF' ? r.precioUnitario / r.valorUF : r.precioUnitario;
        let subtotalMostrar = r.precioUnitario * r.cantidad;

        cuerpo.innerHTML += `
            <tr>
                <td><strong>${r.descripcion || '-'}</strong></td>
                <td>${r.unidad || '-'}</td>
                <td>${typeof r.cantidad === 'number' ? r.cantidad.toLocaleString('es-CL') : '-'}</td>
                <td>${r.moneda === 'UF' ? 
                    `${precioMostrar.toLocaleString('es-CL', { minimumFractionDigits: 2, maximumFractionDigits: 4 })} UF` : 
                    formatearMonedaNuevo(precioMostrar)}</td>
                <td>${r.moneda || '-'}</td>
                <td><strong>${formatearMonedaNuevo(subtotalMostrar)}</strong></td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" onclick="eliminarResiduoNuevo(${i})">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        `;
    });
}

function recalcularTotalesNuevo() {
    // El subtotal es simplemente la suma de los subtotales de cada residuo
    let subtotal = 0;
    residuosNuevos.forEach(r => {
        // El subtotal ya está calculado en CLP (precio_unitario * cantidad)
        subtotal += r.precioUnitario * r.cantidad;
    });

    const iva = subtotal * 0.19;
    const total = subtotal + iva;

    // Actualizar los elementos en el DOM

    document.getElementById('ivaNuevo').textContent = parseInt(iva).toLocaleString('es-CL');
    document.getElementById('totalNuevo').textContent = parseInt(total).toLocaleString('es-CL');

    // Actualizar los campos ocultos para el envío del formulario
    document.getElementById('inputSubtotal').value = subtotal;
    document.getElementById('inputIva').value = iva;
    document.getElementById('inputTotal').value = total;
}

async function eliminarResiduoNuevo(i) {
    residuosNuevos.splice(i, 1);
    await renderTablaResiduosNuevo();
    await recalcularTotalesNuevo();
}

function limpiarFormularioResiduoNuevo() {
    document.getElementById('nuevo_residuoId').value = '';
    document.getElementById('nuevo_unidad').value = '';
    document.getElementById('nuevo_precioUnitario').value = '';
    document.getElementById('nuevo_moneda').value = '';
    document.getElementById('nuevo_cantidad').value = '';
    document.getElementById('nuevo_cantidad').disabled = true;
}

document.getElementById('nuevo_residuoId').addEventListener('change', async function() {
    const option = this.options[this.selectedIndex];
    if (option.value) {
        // Convertir el precio a número, reemplazando la coma por punto si existe
        let precio = option.dataset.precio.toString().replace(',', '.');
        precio = parseFloat(precio);
        const moneda = option.dataset.moneda;
        
        // Si es UF, obtener el valor actual si no lo tenemos
        if (moneda === 'UF' && !valorUF_actual) {
            valorUF_actual = await obtenerValorUF();
            if (!valorUF_actual) {
                mostrarToast('No se pudo obtener el valor de la UF', 'error');
                document.getElementById('nuevo_cantidad').disabled = true;
                return;
            }
        }

        document.getElementById('nuevo_unidad').value = option.dataset.unidad || '';
        document.getElementById('nuevo_precioUnitario').value = (moneda === 'UF' && !isNaN(precio)) ? 
            `${formatearNumeroConComa(precio)} UF` : 
            (isNaN(precio) ? '' : formatearPrecioNuevo(precio, moneda));
        document.getElementById('nuevo_moneda').value = moneda || '';
        document.getElementById('nuevo_cantidad').disabled = false;
    } else {
        limpiarFormularioResiduoNuevo();
    }
});

// Función para obtener el valor de la UF desde la API
async function obtenerValorUF() {
    try {
        const response = await fetch('/api/cmf-bancos/uf/valor');
        const data = await response.json();
        if (data.success && data.data && data.data.valor) {
            valorUF_actual = parseFloat(data.data.valor);
            return valorUF_actual;
        } else {
            // Si no se obtiene el valor de la API principal, intentar con la API de respaldo
            const responseFallback = await fetch('https://mindicador.cl/api/uf');
            const dataFallback = await responseFallback.json();
            if (dataFallback && dataFallback.serie && dataFallback.serie[0]) {
                valorUF_actual = parseFloat(dataFallback.serie[0].valor);
                return valorUF_actual;
            } else {
                throw new Error('No se pudo obtener el valor de la UF de ninguna fuente');
            }
        }
    } catch (error) {
        console.error('Error al obtener valor UF:', error);
        mostrarToast('Error al obtener valor UF: ' + error.message, 'error');
        return null;
    }
}

document.getElementById('btnAgregarResiduoNuevo').addEventListener('click', async function() {
    try {
        const select = document.getElementById('nuevo_residuoId');
        const option = select.options[select.selectedIndex];
        const cantidad = parseFloat(document.getElementById('nuevo_cantidad').value);
        // Convertir el precio a número, reemplazando la coma por punto si existe
        let precioUnitario = option.dataset.precio.toString().replace(',', '.');
        precioUnitario = parseFloat(precioUnitario);
        const moneda = option.dataset.moneda;

        if (!option.value || !cantidad || cantidad <= 0 || isNaN(precioUnitario) || !moneda) {
            mostrarToast('Seleccione un residuo válido, cantidad y precio válidos', 'warning');
            return;
        }

        // Si es UF, obtener el valor actual
        if (moneda === 'UF') {
            if (!valorUF_actual) {
                valorUF_actual = await obtenerValorUF();
            }
            if (!valorUF_actual) {
                mostrarToast('No se pudo obtener el valor de la UF', 'error');
                return;
            }
            // Convertir el precio a CLP para guardarlo
            precioUnitario = precioUnitario * valorUF_actual;
        }

        residuosNuevos.push({
            residuoId: option.value,
            descripcion: option.dataset.descripcion,
            unidad: option.dataset.unidad,
            cantidad: cantidad,
            precioUnitario: precioUnitario,
            moneda: moneda,
            valorUF: moneda === 'UF' ? valorUF_actual : null
        });

        await renderTablaResiduosNuevo();
        await recalcularTotalesNuevo();
        limpiarFormularioResiduoNuevo();
    } catch (error) {
        console.error('Error al agregar residuo:', error);
        mostrarToast('Error al agregar residuo: ' + error.message, 'error');
    }
});

