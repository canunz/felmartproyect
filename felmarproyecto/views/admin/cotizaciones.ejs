        for (const [i, r] of residuosNuevos.entries()) {
            // Calcular subtotal
            let subtotalCLP = r.moneda === 'UF' && valorUF_actual ? 
                r.precioUnitario * valorUF_actual * r.cantidad : 
                r.precioUnitario * r.cantidad;
            
            let subtotalDisplay = r.moneda === 'UF' ? 
                `${formatearNumeroConComa(r.precioUnitario * r.cantidad)} UF` : 
                formatearMonedaNuevo(subtotalCLP);
            
            cuerpo.innerHTML += `
                <tr>
                    <td><strong>${r.descripcion || '-'}</strong></td>
                    <td>${r.unidad || '-'}</td>
                    <td>${typeof r.cantidad === 'number' && !isNaN(r.cantidad) ? formatearNumeroConComa(r.cantidad) : '-'}</td>
