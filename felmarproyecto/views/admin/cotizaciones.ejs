function formatearNumeroConComa(numero) {
    if (typeof numero !== 'number' || isNaN(numero)) return '-';
    return numero.toString().replace('.', ',');
}

// Función para formatear precio en UF
function formatearPrecioUF(precio) {
    if (typeof precio !== 'number' || isNaN(precio)) return '-';
    return formatearNumeroConComa(precio) + ' UF';
}

// Función para formatear precios según la moneda
function formatearPrecioNuevo(precio, moneda) {
    if (typeof precio !== 'number' || isNaN(precio)) return '-';
    if (moneda === 'UF') {
        return formatearPrecioUF(precio);
    }
    return new Intl.NumberFormat('es-CL', {
        style: 'currency',
        currency: 'CLP',
        minimumFractionDigits: 0
    }).format(precio);
}

