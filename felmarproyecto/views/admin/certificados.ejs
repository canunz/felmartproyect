                    <% clientes.forEach(c => { %>
                      <option value="<%= c.id %>"><%= c.nombre %> (<%= c.email %>)</option>
                    <% }) %>
                  <% } %>
                </select>
              </div>
              <div class="mb-3">
                <label for="visita_retiro_id" class="form-label" style="font-weight: 600; color: #00616e; margin-bottom: 0.75rem; font-size: 0.9rem; display: flex; align-items: center; gap: 8px;">
                  <i class="fas fa-calendar-check"></i> Visita
                </label>
                <select class="form-control" id="visita_retiro_id" name="visita_retiro_id" disabled>
                  <option value="">Selecciona una visita</option>
                </select>
