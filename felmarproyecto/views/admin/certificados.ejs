    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <% if (error && error.length > 0) { %>
      <script>window.errorMsg = '<%= error[0] %>';</script>
    <% } %>
    <% if (success && success.length > 0) { %>
      <script>window.successMsg = '<%= success[0] %>';</script>
    <% } %>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar dropdown del admin
            const adminDropdownBtn = document.getElementById('adminDropdownBtn');
            const adminDropdownMenu = document.getElementById('adminDropdownMenu');
            if (adminDropdownBtn && adminDropdownMenu) {
                adminDropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    adminDropdownMenu.classList.toggle('show');
                });
                document.addEventListener('click', function(e) {
                    if (!adminDropdownMenu.contains(e.target) && !adminDropdownBtn.contains(e.target)) {
                        adminDropdownMenu.classList.remove('show');
                    }
                });
            }

            // Verificar mensajes del servidor
            if (window.errorMsg) mostrarToast(window.errorMsg, 'error');
            if (window.successMsg) mostrarToast(window.successMsg, 'success');

            // VERIFICAR PARÁMETROS URL PARA NOTIFICACIONES
            checkUrlParams();
            
            // Toggle edit buttons functionality
            document.querySelectorAll('.toggle-edit-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    const input = document.getElementById(targetId);
                    if (input) {
                        input.disabled = !input.disabled;
                        this.querySelector('i').classList.toggle('fa-eye');
                        this.querySelector('i').classList.toggle('fa-eye-slash');
                    }
                });
            });
            
            // Edit certificate buttons
            document.querySelectorAll('.btn-editar-certificado').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const certificado = JSON.parse(this.getAttribute('data-certificado'));
                    document.getElementById('editar_id').value = certificado.id;
                    document.getElementById('editar_cliente_id').value = certificado.cliente_usuario_id || '';
                    document.getElementById('editar_visita_retiro_id').value = certificado.visita_retiro_id || '';
                    document.getElementById('editar_observaciones').value = certificado.observaciones || '';
                    document.getElementById('editar_fecha_emision').value = certificado.fechaEmision ? new Date(certificado.fechaEmision).toISOString().slice(0,10) : '';
                    document.getElementById('editar_archivoPdf').value = '';
                    document.getElementById('formEditarCertificado').action = '/admin/certificados/editar/' + certificado.id;
                    var modal = new bootstrap.Modal(document.getElementById('modalEditarCertificado'));
                    modal.show();
                });
            });
            
            // Handle delete forms with confirmation
            document.querySelectorAll('.form-eliminar-certificado').forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    if (confirm('¿Estás seguro de que deseas eliminar este certificado? Esta acción no se puede deshacer.')) {
                        this.submit();
                    }
                });
            });

            // Manejar cambio de cliente para cargar visitas
            document.getElementById('cliente_id').addEventListener('change', async function() {
                const clienteId = this.value;
                const visitaSelect = document.getElementById('visita_retiro_id');
                
                visitaSelect.disabled = !clienteId;
                visitaSelect.innerHTML = '<option value="">Selecciona una visita</option>';
                
                if (clienteId) {
                    try {
                        const response = await fetch(`/api/visitas-por-cliente/${clienteId}`);
                        if (!response.ok) {
                            throw new Error('Error al obtener visitas');
                        }
                        const data = await response.json();
                        
                        if (data.success && data.data.length > 0) {
                            data.data.forEach(visita => {
                                const fecha = new Date(visita.fecha).toLocaleDateString('es-ES');
                                const option = document.createElement('option');
                                option.value = visita.id;
                                option.textContent = `Visita ${visita.id} - ${fecha} - ${visita.tipo_visita || 'Sin tipo'}`;
                                visitaSelect.appendChild(option);
                            });
                            visitaSelect.disabled = false;
                        } else {
                            visitaSelect.innerHTML = '<option value="">No hay visitas disponibles</option>';
                            visitaSelect.disabled = true;
                        }
                    } catch (error) {
                        console.error('Error al cargar visitas:', error);
                        mostrarToast('Error al cargar las visitas', 'error');
                        visitaSelect.innerHTML = '<option value="">Error al cargar visitas</option>';
                        visitaSelect.disabled = true;
                    }
                }
            });

            // Establecer fecha actual por defecto en el campo de fecha de emisión
            const fechaEmisionInput = document.getElementById('fechaEmision');
            if (fechaEmisionInput) {
                const hoy = new Date();
                const año = hoy.getFullYear();
                const mes = String(hoy.getMonth() + 1).padStart(2, '0');
                const dia = String(hoy.getDate()).padStart(2, '0');
                fechaEmisionInput.value = `${año}-${mes}-${dia}`;
            }

            // Formatear todas las fechas en la tabla
            document.querySelectorAll('td').forEach(td => {
                const text = td.textContent.trim();
                if (text.includes('-') && text.includes('T')) {
                    try {
                        const fecha = new Date(text);
                        if (!isNaN(fecha)) {
                            td.textContent = fecha.toLocaleDateString('es-ES');
                        }
                    } catch (e) {
                        console.error('Error al formatear fecha:', e);
                    }
                }
            });

            // Validar formulario antes de enviar
            document.getElementById('formCrearCertificado').addEventListener('submit', function(e) {
                const cliente = document.getElementById('cliente_id').value;
                const fecha = document.getElementById('fechaEmision').value;
                const archivo = document.getElementById('archivoPdf').files[0];

                if (!cliente || !fecha || !archivo) {
                    e.preventDefault();
                    mostrarToast('Por favor completa todos los campos obligatorios', 'error');
                }
            });

            // Función para cargar detalles de visita
            async function cargarDetallesVisita(visitaId, contenedor) {
                try {
                    const response = await fetch(`/api/visitas/${visitaId}`);
                    if (!response.ok) throw new Error('Error al cargar detalles de visita');
                    const data = await response.json();
                    
                    if (data.success && data.data) {
                        const visita = data.data;
                        const fecha = new Date(visita.fecha).toLocaleDateString('es-ES');
                        const hora = visita.hora || 'No especificada';
                        const estado = visita.estado ? visita.estado.charAt(0).toUpperCase() + visita.estado.slice(1) : 'No especificado';
                        const tipo = visita.tipo_visita ? visita.tipo_visita.charAt(0).toUpperCase() + visita.tipo_visita.slice(1) : 'No especificado';
                        
                        contenedor.innerHTML = `
                            <span class="badge bg-info mb-1">Visita #${visita.id}</span>
                            <div class="visita-detalles small">
                                <div><i class="fas fa-calendar-day"></i> ${fecha} ${hora}</div>
                                <div><i class="fas fa-info-circle"></i> ${tipo}</div>
                                <div><i class="fas fa-check-circle"></i> ${estado}</div>
                            </div>
                        `;
                    } else {
                        contenedor.innerHTML = `
                            <span class="badge bg-warning">Visita no encontrada</span>
                        `;
                    }
                } catch (error) {
                    console.error('Error al cargar detalles de visita:', error);
                    contenedor.innerHTML = `
                        <span class="badge bg-danger">Error al cargar detalles</span>
                    `;
                }
            }

            // Cargar detalles de todas las visitas
            document.querySelectorAll('.visita-info').forEach(contenedor => {
                const visitaId = contenedor.dataset.visitaId;
                if (visitaId) {
                    cargarDetallesVisita(visitaId, contenedor);
                }
            });
        });

        function checkUrlParams() {
            const urlParams = new URLSearchParams(window.location.search);
            
            // PRIMERO HACER PRUEBA SIMPLE
            console.log('Verificando parámetros URL:', urlParams.toString());
            
            if (urlParams.get('created') === 'success') {
                console.log('Detectado created=success');
                // PRUEBA CON ALERT PRIMERO
                alert('¡Certificado creado exitosamente!');
                // Y TAMBIÉN CON TOAST
                mostrarToast('¡Certificado creado exitosamente!', 'success');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
            
            if (urlParams.get('updated') === 'success') {
                console.log('Detectado updated=success');
                alert('¡Certificado modificado exitosamente!');
                mostrarToast('¡Certificado modificado exitosamente!', 'success');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
            
            if (urlParams.get('deleted') === 'success') {
                console.log('Detectado deleted=success');
                alert('¡Certificado eliminado exitosamente!');
                mostrarToast('¡Certificado eliminado exitosamente!', 'success');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
            
            if (urlParams.get('error') === 'true') {
                const errorMsg = urlParams.get('error_msg') || 'Ocurrió un error';
                console.log('Detectado error:', errorMsg);
                alert('Error: ' + errorMsg);
                mostrarToast('Error: ' + errorMsg, 'error');
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        }

        // Sistema de notificaciones toast (IGUAL QUE EN TU ARCHIVO)
        function mostrarToast(mensaje, tipo = 'info') {
            console.log('mostrarToast llamado:', mensaje, tipo);
            
            const toastContainer = document.getElementById('toastContainer');
            console.log('toastContainer encontrado:', toastContainer);
            
            if (!toastContainer) {
                console.error('No se encontró toastContainer');
                // Crear el contenedor si no existe
                const container = document.createElement('div');
                container.id = 'toastContainer';
                container.className = 'toast-container';
                container.style.position = 'fixed';
                container.style.top = '80px';
                container.style.right = '20px';
                container.style.zIndex = '9999';
                document.body.appendChild(container);
            }
            
            const iconos = {
                success: 'fas fa-check-circle',
                error: 'fas fa-exclamation-circle',
                warning: 'fas fa-exclamation-triangle',
                info: 'fas fa-info-circle'
            };
            
            const colores = {
                success: 'text-success',
                error: 'text-danger',
                warning: 'text-warning',
                info: 'text-info'
            };
            
            const toastId = 'toast-' + Date.now();
            
            const toastHTML = `
                <div class="toast" id="${toastId}" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
                    <div class="toast-header">
                        <i class="${iconos[tipo]} ${colores[tipo]} me-2"></i>
                        <strong class="me-auto">Felmart</strong>
                        <small>ahora</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">
                        ${mensaje}
                    </div>
                </div>
            `;
            
            const finalContainer = document.getElementById('toastContainer');
            finalContainer.insertAdjacentHTML('beforeend', toastHTML);
            
            const toastElement = document.getElementById(toastId);
            console.log('toastElement creado:', toastElement);
            
            const toast = new bootstrap.Toast(toastElement);
            console.log('bootstrap.Toast creado:', toast);
            
            toast.show();
            
            // Remover toast después de que se oculte
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }
    </script>

