            padding: 0 !important;
            max-width: 900px;
            margin: 0 auto;
            padding-top: 70px !important;
        }
        
        .page-header { 
            background: white; 
            border-radius: 10px; 
            padding: 1rem 1.2rem; 
            margin-bottom: 1rem; 
            box-shadow: 0 1px 6px rgba(0,0,0,0.05); 
            border: 1px solid #e2e8f0; 
        }
        
        .page-title { 
            font-size: 1.15rem; 
            font-weight: 700; 
            color: var(--nav-primary-color); 
            margin-bottom: 0.2rem; 
        }
        
        .breadcrumb { 
            background: none; 
            padding: 0; 
            margin: 0; 
            font-size: 0.95rem; 
        }
        
        .breadcrumb-item { 
            color: var(--nav-secondary-color); 
        }
        
        .breadcrumb-item.active { 
            color: var(--nav-secondary-color); 
            opacity: 0.7; 
        }
        
        .breadcrumb-item a { 
            color: var(--nav-primary-color); 
            text-decoration: none; 
            transition: all 0.2s ease; 
        }
        
        .breadcrumb-item a:hover { 
            color: var(--nav-primary-dark); 
        }
        
        .back-button { 
            background: var(--nav-primary-color); 
            color: white; 
            padding: 0.35rem 1rem; 
            border-radius: 8px; 
            text-decoration: none; 
            font-weight: 600; 
            display: inline-flex; 
            align-items: center; 
            gap: 0.3rem; 
            transition: var(--nav-transition); 
            margin-bottom: 0.5rem; 
            box-shadow: 0 1px 4px rgba(0, 97, 110, 0.08); 
            font-size: 0.88rem; 
            border: none; 
        }
        
        .back-button:hover { 
            background: var(--nav-primary-light); 
            color: white; 
            transform: translateY(-1px); 
            box-shadow: 0 2px 8px rgba(0, 97, 110, 0.12); 
        }
        
        .profile-card { 
            background: white; 
            border-radius: 10px; 
            box-shadow: 0 1px 6px rgba(0,0,0,0.05); 
            border: none; 
            margin-bottom: 1rem; 
            overflow: hidden; 
        }
        
        .profile-card .card-header { 
            background: linear-gradient(135deg, var(--nav-primary-color), var(--nav-primary-light)); 
            color: white; 
            padding: 0.7rem 1rem; 
            border: none; 
            font-size: 0.98rem; 
            font-weight: 600; 
        }
        
        .profile-card .card-title { 
            font-size: 1rem; 
            font-weight: 600; 
            margin: 0; 
            display: flex; 
            align-items: center; 
        }
        
        .profile-card .card-title i { 
            margin-right: 0.4rem; 
            font-size: 1rem; 
        }
        
        .profile-card .card-body { 
            padding: 1rem 1.2rem; 
        }
        
        .profile-image-section { 
            text-align: center; 
            padding: 1rem; 
            background: linear-gradient(135deg, rgba(0, 97, 110, 0.04), rgba(0, 129, 143, 0.04)); 
        }
        
        .profile-image-container { 
            position: relative; 
            display: inline-block; 
            margin-bottom: 0.7rem; 
        }
        
        .avatar-circle { 
            width: 80px; 
            height: 80px; 
            border-radius: 50%; 
            background: linear-gradient(135deg, var(--nav-primary-color), var(--nav-primary-light)); 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            color: white; 
            font-size: 2rem; 
            border: 3px solid white; 
            box-shadow: 0 1px 6px rgba(0,0,0,0.05); 
        }
        
        .camera-btn { 
            position: absolute; 
            bottom: 4px; 
            right: 4px; 
            width: 22px; 
            height: 22px; 
            border-radius: 50%; 
            background: var(--nav-primary-color); 
            color: white; 
            border: 1.5px solid white; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            cursor: pointer; 
            transition: var(--nav-transition); 
            box-shadow: 0 1px 6px rgba(0,0,0,0.05); 
            font-size: 0.7rem;
        }
        
        .camera-btn:hover { 
            background: var(--nav-primary-dark); 
            transform: scale(1.08); 
        }
        
        .profile-name { 
            font-size: 1.05rem; 
            font-weight: 700; 
            color: var(--nav-primary-color); 
            margin-bottom: 0.2rem; 
        }
        
        .profile-info { 
            color: var(--nav-secondary-color); 
            margin-bottom: 0.1rem; 
            font-size: 0.85rem;
        }
        
        .profile-info i { 
            width: 16px; 
            text-align: center; 
            margin-right: 0.3rem; 
            color: var(--nav-primary-color); 
        }
        
        .form-control, .form-select { 
            border: 1.5px solid #e9ecef; 
            border-radius: 8px; 
            padding: 7px 12px; 
            font-size: 0.97rem; 
            transition: var(--nav-transition); 
            background: white; 
        }
        
        .form-control:focus, .form-select:focus { 
            border-color: var(--nav-primary-color); 
            box-shadow: 0 0 0 0.1rem rgba(0, 97, 110, 0.08); 
        }
        
        .form-label { 
            font-weight: 600; 
            color: var(--nav-primary-color); 
            margin-bottom: 0.3rem; 
            font-size: 0.95rem;
        }
        
        .btn-primary { 
            background: linear-gradient(135deg, var(--nav-primary-color), var(--nav-primary-light)); 
            border: none; 
            border-radius: 8px; 
            padding: 7px 18px; 
            font-weight: 600; 
            transition: var(--nav-transition); 
            font-size: 0.97rem;
        }
        
        .btn-primary:hover { 
            transform: translateY(-1px); 
            box-shadow: 0 2px 8px rgba(0, 97, 110, 0.10); 
        }
        
        .btn-secondary { 
            background: var(--nav-secondary-color); 
            border: none; 
            border-radius: 8px; 
            padding: 7px 18px; 
            font-weight: 600; 
            transition: var(--nav-transition); 
            font-size: 0.97rem;
        }
        
        .btn-danger { 
            background: linear-gradient(135deg, var(--danger-color), #e55a5a); 
            border: none; 
            border-radius: 8px; 
            padding: 7px 18px; 
            font-weight: 600; 
            transition: var(--nav-transition); 
            font-size: 0.97rem;
        }
        
        .btn-danger:hover { 
            transform: translateY(-1px); 
            box-shadow: 0 2px 8px rgba(220, 53, 69, 0.10); 
        }
        
        .success-message { 
            position: fixed; 
            top: 70px; 
            right: 16px; 
            background: linear-gradient(135deg, var(--success-color), #20c997); 
            color: white; 
            padding: 0.7rem 1.1rem; 
            border-radius: 8px; 
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.10); 
            z-index: 1050; 
            display: none; 
            font-size: 0.95rem;
            animation: slideInRight 0.5s ease-out; 
        }
        
        .success-message.show { 
            display: block; 
        }
        
        .password-strength {
            height: 3px;
            border-radius: 2px;
            margin-top: 6px;
            background: #e9ecef;
            transition: all 0.3s ease;
        }
        
        .password-strength.weak {
            background: linear-gradient(to right, #dc3545 30%, #e9ecef 30%);
        }
        
        .password-strength.medium {
            background: linear-gradient(to right, #ffc107 60%, #e9ecef 60%);
        }
        
        .password-strength.strong {
            background: linear-gradient(to right, #28a745 100%, #e9ecef 100%);
        }
        
        @keyframes slideInRight { 
            from { transform: translateX(100%); opacity: 0; } 
            to { transform: translateX(0); opacity: 1; } 
        }
        
        .spinner { 
            display: inline-block; 
            width: 13px; 
            height: 13px; 
            border: 2px solid #ffffff; 
            border-radius: 50%; 
            border-top-color: transparent; 
            animation: spin 1s ease-in-out infinite; 
        }
        
        @keyframes spin { 
            to { transform: rotate(360deg); } 
        }

        .fade-in-up {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s ease-out;
        }

        .fade-in-up.loaded {
            opacity: 1;
            transform: translateY(0);
        }
        
        @media (max-width: 900px) {
            .nav-container { padding: 0 6px; }
            .content-wrapper { padding: 0.5rem; padding-top: 60px !important; }
            .profile-card .card-body { padding: 0.7rem; }
            .page-header { padding: 0.7rem; }
        }
        @media (max-width: 768px) {
            .nav-menu { display: none; }
            .content-wrapper { padding: 0.5rem; padding-top: 60px !important; }
            .profile-card .card-body { padding: 0.7rem; }
            .page-header { text-align: center; padding: 0.7rem; }
            .page-title { font-size: 1.1rem; }
        }
        .logo-section span, .logo-text {
            font-size: 1.35rem !important;
            font-weight: 700 !important;
            letter-spacing: 0.5px;
        }
        .nav-link, .nav-link i {
            font-size: 0.82rem !important;
        }
        .user-btn {
            font-size: 0.82rem !important;
            padding: 0.32rem 0.8rem !important;
            border-radius: 1rem !important;
        }
    </style>
</head>
