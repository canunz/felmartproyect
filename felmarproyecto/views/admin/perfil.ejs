    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --nav-primary-color: #00616e;
            --nav-primary-dark: #004d57;
            --nav-primary-light: #00818f;
            --nav-secondary-color: #6c757d;
            --nav-white: #ffffff;
            --nav-shadow: 0 4px 20px rgba(0,0,0,0.08);
            --nav-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --success-color: #00616e;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
            --light-bg: #f8f9fa;
            --border-radius: 10px;
            --shadow: 0 1px 6px rgba(0,0,0,0.05);
        }
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: 'Inter', sans-serif; 
            background: #f8f9fa;
            margin: 0;
            padding: 0;
            line-height: 1.5;
            font-size: 15px;
        }

        /* NAVBAR COMPACTO */
        .header-nav { 
            background: #fff; 
            border-bottom: 1px solid #e0e3e7; 
            width: 100%;
            position: fixed; 
            top: 0; 
            left: 0; 
            right: 0; 
            z-index: 1002; 
            height: 70px; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            box-shadow: 0 1px 4px rgba(60,60,60,0.04);
        }
        
        .nav-container { 
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 58px;
            padding: 0 12px;
        }
        
        .logo-section { 
            display: flex;
            align-items: center;
            text-decoration: none;
        }
        
        .logo-img { 
            width: 28px;
            height: 28px;
            border-radius: 7px;
            object-fit: cover;
            margin-right: 7px;
        }
        
        .logo-text { 
            font-size: 1.05rem;
            font-weight: 700;
            color: #00616e;
        }
        
        nav { 
            height: 100%;
            display: flex;
            align-items: center;
        }
        
        .nav-menu { 
            display: flex;
            align-items: center;
            gap: 0;
            margin: 0;
            padding: 0;
            list-style: none;
            height: 100%;
        }
        
        .nav-item { 
            display: flex;
            align-items: center;
            height: 100%;
        }
        
        .nav-link { 
            color: #5a646e;
            font-weight: 500;
            font-size: 0.89rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
            padding: 6px 10px 0 10px;
            border-radius: 6px;
            transition: all 0.2s ease;
            height: 100%;
        }
        
        .nav-link:hover, .nav-link.active { 
            color: var(--nav-primary-color); 
            background: rgba(0, 97, 110, 0.05); 
        }
        
        .nav-link i { 
            font-size: 1em;
        }
        
        .user-dropdown { 
            display: flex;
            align-items: center;
            height: 100%;
            position: relative;
        }
        
        .user-btn { 
            background: #009688;
            color: white;
            border: none;
            padding: 0.32rem 0.8rem;
            border-radius: 30px;
            display: flex;
            align-items: center;
            gap: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 0.92rem;
            margin-top: 0;
            box-shadow: 0 1px 4px rgba(0,150,136,0.07);
        }
        
        .user-btn:hover { 
            background: var(--nav-primary-dark); 
        }
        
        .dropdown-menu { 
            position: absolute;
            top: calc(100% + 6px);
            right: 0;
            background: #fff;
            border: none;
            border-radius: 10px;
            box-shadow: 0 6px 24px rgba(0,0,0,0.08);
            min-width: 170px;
            padding: 0.3rem;
            margin-top: 0.3rem;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-8px);
            transition: all 0.2s;
        }
        
        .dropdown-menu.show { 
            opacity: 1; 
            visibility: visible; 
            transform: translateY(0); 
        }
        
        .dropdown-item { 
            display: flex; 
            align-items: center; 
            gap: 6px; 
            padding: 0.5rem 0.7rem; 
            color: var(--nav-primary-color); 
            text-decoration: none; 
            transition: var(--nav-transition); 
            font-size: 13px; 
            border-radius: 7px; 
            margin: 0.15rem 0; 
            font-weight: 500; 
        }
        
        .dropdown-item:hover { 
            background: rgba(0, 97, 110, 0.07); 
            color: var(--nav-primary-color); 
            transform: translateX(3px); 
        }
        
        .dropdown-item.text-danger { 
            color: var(--danger-color) !important; 
        }
        
        .dropdown-item.text-danger:hover { 
            background: rgba(220, 53, 69, 0.1); 
            color: var(--danger-color) !important; 
        }
        
        .dropdown-item i { 
            width: 18px; 
            text-align: center; 
        }

        /* CONTENIDO PRINCIPAL COMPACTO */
