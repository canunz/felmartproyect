                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary btn-md w-auto" id="submitBtn" disabled>
                                <i class="fas fa-save"></i>
                                <span>Actualizar Contraseña</span>
                            </button>
                            <a href="/dashboard/cliente" class="btn btn-secondary btn-md w-auto">
